# ─── Environnement / Service ─────────────────────────────────────────────────
NODE_ENV=development
PORT=5000
LOG_LEVEL=info                  # info|debug|warn|error

# ─── Principal Backend URL ──────────────────────────────────────────────────
PRINCIPAL_URL=

# ─── MongoDB ────────────────────────────────────────────────────────────────
MONGO_URI_USERS=
MONGO_URI_TRANSACTIONS=

# ─── Redis (rate limiting) ──────────────────────────────────────────────────
# (optionnel – non utilisé si tu gardes l'araignée mémoire d'express-rate-limit)
REDIS_URL=

# ─── Client URL (CORS) ──────────────────────────────────────────────────────
# Accepte 1 ou plusieurs origines séparées par des virgules
CORS_ORIGIN=http://localhost:3000

# ─── JWT & HMAC ─────────────────────────────────────────────────────────────
JWT_SECRET=
INTERNAL_TOKEN=
JWT_EXPIRES_IN=1h
HMAC_SECRET=

# ─── SMTP (optionnel) ───────────────────────────────────────────────────────
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# ─── Micro-service emails (optionnel) ───────────────────────────────────────
EMAIL_MICROSERVICE_URL=

# 🌐 Exchange API
EXCHANGE_API_URL=               # ex: https://v6.exchangerate-api.com/v6/<API_KEY>
EXCHANGE_API_KEY=
EXCHANGE_CACHE_TTL=3600000      # ms (1h)

# ─── API Gateway URL ─────────────────────────────────────────────────────────
GATEWAY_URL=

# ─── Observabilité / Docs ───────────────────────────────────────────────────
SENTRY_DSN=                     # optionnel
OPENAPI_SPEC_PATH=./docs/openapi.yaml  # chemin vers ta spec OpenAPI pour /docs
